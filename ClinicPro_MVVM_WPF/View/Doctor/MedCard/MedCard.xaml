<UserControl x:Class="ClinicPro_MVVM_WPF.View.Doctor.MedCard.MedCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{StaticResource Page_Style}"
             Height="490"
             Width="525">
    
    <Grid>

        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Resources/background.png"
                            Stretch = "None"/>
            </Border.Background>
        </Border>
        
        <ContentControl Content="{Binding CurrentMedCardView}"/>
    </Grid>
    
    
    
</UserControl>
