<UserControl x:Class="ClinicPro_MVVM_WPF.View.Admin.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Style="{StaticResource Page_Style}"
             Height="490"
             Width="525">
    <Grid>
        <!--// Main Grid //-->
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Resources/background.png"
                            Stretch = "None"/>
            </Border.Background>
        </Border>
        <Border CornerRadius="20"
                Background="#709DFF"
                Height="490px"
                Width="525px"
                Opacity="0.85">
        </Border>
        
        <Image Source="/Resources/danger.png"
               Width="150"
               VerticalAlignment="Top"
               Margin="0 30 0 0"/>
        
        <TextBlock Text="!B Procese!"
                   Style="{StaticResource Text_Style}"
                   Foreground="#1E1E1E"
                   FontSize="32"
                   FontWeight="Bold"
                   Margin="0 0 0 70"
                   HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
