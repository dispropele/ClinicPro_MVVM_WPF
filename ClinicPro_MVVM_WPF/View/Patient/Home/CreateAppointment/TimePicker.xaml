<UserControl x:Class="ClinicPro_MVVM_WPF.View.Patient.Home.CreateAppointment.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
        <!-- Часы -->
        <ComboBox x:Name="HourPicker" Width="50" VerticalAlignment="Center">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <TextBlock Text=":" VerticalAlignment="Center" FontSize="16" Margin="5,0" />
        
        <!-- Минуты -->
        <ComboBox x:Name="MinutePicker" Width="50" VerticalAlignment="Center">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" HorizontalAlignment="Center" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</UserControl>
