<UserControl x:Class="ClinicPro_MVVM_WPF.View.User.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:utils="clr-namespace:ClinicPro_MVVM_WPF.Utils"
             MouseDown="UserControl_MouseDown"
             Background="Transparent"
             Height="600" Width="800"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
             Style="{StaticResource LoginStyle}">

    <Grid>

        <Image VerticalAlignment="Bottom"
               Width="100"
               Source="/Resources/LogoNoBg.png" />
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource Text_Style}"
            Margin="0 0 0 0"
            HorizontalAlignment="Center"
            FontSize="34"
            Text="ClinicPro"/>

        <!--// Login //-->
        <TextBox x:Name="LoginBox"
                 VerticalAlignment="Bottom"
                 Grid.Row="2"
                 GotFocus="LoginBox_GotFocus"
                 LostFocus="LoginBox_LostFocus"
                 Padding="50 5 0 0"
                 Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                 MaxLength="30"
                 FontSize="24"
                 Style="{StaticResource TextBoxUnderlineStyle}"/>
        <Image Grid.Row="2"
               VerticalAlignment="Bottom"
               Width="40"
               Source="/Resources/UserWhite.png"
               Margin="0 0 220 5"/>

        <!--// Password //-->
        <PasswordBox x:Name="PasswordBox"
                 VerticalAlignment="Bottom"
                 Grid.Row="3"
                 Style="{StaticResource PasswordBoxStyle}"
                 GotFocus="PasswordBox_GotFocus"
                 LostFocus="PasswordBox_LostFocus"
                 Padding="50 5 0 0"
                 FontSize="24"
                 MaxLength="20"
                 utils:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Image Grid.Row="3"
               VerticalAlignment="Bottom"
               Width="60"
               Source="/Resources/key.png"
               Margin="0 0 220 0"/>
        
        <!--// Error Message //-->
        <TextBlock Grid.Row="4"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="20"/>
        
        <!--// Log in button //-->
        <Button Background="#6ABD76"
                Grid.Row="4"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Width="160"
                Height="40"
                Style="{StaticResource RecordButtonStyle}"
                Margin="0 0 160 0"
                Command="{Binding LoginCommand}">
            <TextBlock FontSize="24"
                       Style="{StaticResource Text_Style}"
                       Text="Вход"
                       Margin="0 0 0 0"/>
        </Button>

        <!--// Registration button //-->
        <Button Grid.Row="4"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Center"
                Width="160"
                Height="40"
                Style="{StaticResource ButtonNoHoverStyle}"
                Margin="200 0 0 0"
                Command="{Binding RegisterCommand}">
            <TextBlock  Style="{StaticResource Text_Style}"
                        Text="Регистрация"
                        Margin="0 0 0 0"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"/>
        </Button>

        <TextBlock Grid.Row="5"
            FontSize="16"
            Foreground="#B6B6B6"
            FontFamily="/Fonts/#JetBrains Mono"
            Text="Забыли пароль?"
            Margin="0 15 160 0"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"/>
        
        <Button Grid.Row="5"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Margin="160 15 0 0"
                Command="{Binding ForgotPasswordCommand}"
                Style="{StaticResource ButtonNoHoverStyle}">
            <TextBlock
                Grid.Row="5"
                FontSize="16"
                Style="{StaticResource Text_Style}"
                Margin="0 0 0 0"
                Text="Сбросить пароль"
                VerticalAlignment="Top"
                TextDecorations="Underline"
                HorizontalAlignment="Center"/>
        </Button>

        <Grid.RowDefinitions>
            <RowDefinition Height="165"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="105"/>
            <RowDefinition Height="85"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
    </Grid>
</UserControl>
